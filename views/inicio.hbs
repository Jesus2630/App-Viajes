</main>
<div class="descuento">
        <div class="container">
                <div class="row">
                        <div class="col-md-6">
                                <div class="contenido">
                                        <h3 class="titulo text-white">5 % de Descuento</h3>
                                        <p class="fecha">20 de Marzo de 2022 - 28 de Marzo de 2022</p>
                                        <p class="precio">2.500$</p>
                                </div>
                        </div>
                </div>
        </div>
</div>
<div class="container">
        <h2 class="my-5 text-center">Testimoniales</h2>
        <div class="row testimoniales">        
                {{#each testimoniales as |testimonial|}}
                        <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card">
                                        <div class="card-body">
                                                <blockquote class="blockquote">
                                                </blockquote>
                                                <p class="mb-0">
                                                        |{{mensaje}}
                                                </p>
                                                <footer class="blockquote-footer">
                                                        |{{nombre}}
                                                </footer>
                                        </div>
                                </div>
                        </div>
                {{/each}}
        </div>
</div>