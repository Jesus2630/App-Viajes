        <div class="row proximos-viajes">
                {{#each viajes as |viaje|}}
                <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card">
                                <img src="img/destinos_{{imagen}}.jpg" alt="imagenes-sitios" class="card-img-top">
